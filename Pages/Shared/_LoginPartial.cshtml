@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="container-fluid d-flex justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button class="btn btn-outline-danger ml-auto" type="submit">Logout</button>
    </form>

}
else
{
    <a class="btn btn-outline-success m-1" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</div>
