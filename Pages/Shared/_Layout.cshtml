<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Foodbank Finder</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true"/>
</head>

<body class="d-flex vh-100 flex-column">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container">
            @*            <a class="navbar-brand" asp-area="" asp-page="/Index">Foodbank Project</a>
*@
            <a asp-area="" asp-page="/Index" class="navbar-brand">
                <img src="/img/Foodbank-logo.png" style="width:100px;height:100px" title="Foodbank Finder" alt="Foodbank Finder logo"/>
            </a>

            @*            <img scr = "~\Images\Foodbank_logo.png" alt ="Foodbank logo" style="width:20px;height:20px";>
*@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/GetHelp/Index">Get&nbsp;Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/GiveHelp/Index">Give&nbsp;Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Recipes/Index">Recipes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="container-fluid flex-fill">
    @RenderBody()
</main>

<footer class="mastfoot mt-5 ">
    <div class="inner bg-success mt-5">
        <div class="row m-0">
            <div class="col-sm-2">
               <a class="nav-link text-light text-decoration-underline" asp-area="" asp-page="/Terms">Terms and Conditions</a>
            </div>
            <div class="col-sm-8">
                <p class="h4 text-light">A joint project between the University of Chester and Clicky media</p>
                <div class="text-center">
                    <img src="~/img/uoc_logo.png" class="img-box" alt="university logo" />
                    <img src="~/img/clicky_logo2.jpg" class="img-box" alt="clicky logo" />
                </div>
            </div>
            <div class="col-sm-2 pt-md-3">
                <div class="mb-3">
                    <h2> </h2>
                </div>
                <div class="m-2 col-5 mx-auto d-grid">
                    <a class="btn btn-lg btn-primary" asp-area="" asp-page="/Admin/Account/Login">Login</a>
                </div>
            </div>
        </div>
    </div>
</footer>


<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>