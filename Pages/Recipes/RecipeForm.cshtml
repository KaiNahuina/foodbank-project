@page
@model RecipeFormModel
@{
    ViewData["Title"] = "Recipe Form";
}



<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="m-2 d-grid">
                <a class="btn btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Index">Back</a>
            </div>
        </div>
        <div class="col-sm-6 text-center">

            <h1 class="display-4">Add A Recipe</h1>
        </div>
        <div class="col-md-3 text-center">
            <h1 class="display-4"></h1>
        </div>
    </div>

</div>

<form method="POST" enctype="multipart/form-data">

    <div class="container mt-5T">

        <div class="col-md-3">
            <label for="RecipeName">Recipe Name:</label><br />
            <input class="text-box" asp-for="Recipe.Name" type="text" /><br />
            <label for="RecipeServes">Recipe Serves:</label><br />
            <input class="text-box" asp-for="Recipe.Serves" type="text" /><br />
        </div>

        <label for="Categories">Select recipe Categories::</label> <br />
        <div class="text-box col-md-2">
            @foreach (var category in Model.SelectedCategories)
            {
                <label>@Html.DisplayFor(model => category.Value.Item1.Name)</label>
                <input asp-for="SelectedCategories[category.Key].Item2" type="checkbox"> <br />
            }

        </div>
    </div>
    <div class="container  spacingT">
        <label for="Ingredients">Ingredients:</label>

        <textarea asp-for="Recipe.Ingredients" rows="4" cols="1" class="form-control text-box"></textarea><br />

    </div>


    <div class="container">
        <label for="RecipeMethod">Recipe Method:</label><br />
        <textarea asp-for="Recipe.Method" rows="4" cols="1" class="form-control text-box"></textarea><br />
    </div>
    <div class="container">
        <label for="RecipeNotes">Recipe Notes:</label><br />
        <textarea asp-for="Recipe.Notes" rows="2" cols="1" class="form-control text-box"></textarea><br />
    </div>

    <div class="container mt-2">
        Upload Image: (Image size should be 300x300)<br />

        <input class="mt-3 btn btn-lg btn-outline-success" type="file"
               asp-for="Image" />

        <br />
        <input class="mt-3 btn btn-lg btn-outline-success" type="submit" /> <br />
        <label for="Status">Status is awaiting approval:</label>

    </div>
</form>
