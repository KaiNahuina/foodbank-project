                <a class="btn mt-2 btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Search" asp-route-catName="Special">Special Events</a>
            </a>
        </div>
        <div class="col-md-3 text-center">

            <img src="~/img/Vegetables.jpg" alt="Vegetarian Dishes" class="recipe-icons" /><br />
            <a asp-page="/Recipes/Search">
