@page
@model IndexModel
@{
    ViewData["Title"] = "Recipes";
}



<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="m-2 d-grid">
                <a class="btn btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/RecipeForm">Submit&nbsp;your&nbsp;Recipe</a>
            </div>
            <div class="m-2 d-grid">
                <a class="btn btn-lg btn-outline-success" asp-area="" asp-page="/Index">Home</a>
            </div>
            <div class="m-2 d-grid">
                <a class="btn btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Dish">Dish of the day</a>
            </div>
        </div>
        <div class="col-sm-6 text-center">

            <h1 class="display-4">Select a recipe category</h1>
        </div>
        <div class="col-md-3 text-center">
            <h1 class="display-4"></h1>
        </div>
    </div>

</div>



<div class="container mt-5">
    <div class="row spacingB">
        <div class="container col-md-3 text-center">

            <img src="~/img/SpecialEvent.jpg" alt="Special Event" class="recipe-icons" /><br />
