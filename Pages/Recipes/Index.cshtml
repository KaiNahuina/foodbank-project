            </a>
        </div>
        <div class="col-md-3 text-center">

            <img src="~/img/Meat.jpg" alt="Meat Dishes" class="recipe-icons" /><br />
            <a asp-page="/Recipes/Search">
                <a class="btn mt-2 btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Search" asp-route-catName="Meat">Meat Dishes</a>

            </a>
            </a>
        </div>
        <div class="col-md-3 text-center">
            <a asp-page="/Recipes/Search">
                <img src="~/img/Fish.jpg" alt="Fish Dishes" class="recipe-icons" /><br />
                <a class="btn mt-2 btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Search" asp-route-catName="Fish">Fish Dishes</a>

            </a>
        </div>
    </div>
</div>


