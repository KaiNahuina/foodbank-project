@page "{catName}"
@using Foodbank_Project.Models
@model SearchModel
@{
    ViewData["Title"] = "Search Page";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="m-2 d-grid">
                <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Index">Back</a>
            </div>
        </div>
        <div class="col-sm-6 text-center">

            <h1 class="display-4">@Model.Category </h1>
        </div>
        <div class="col-md-3 text-center">
            <h1 class="display-4"></h1>
        </div>
    </div>

</div>
<div class="container mt-5">

<table class="table table-striped table-hover w-80">
    <thead>
        <tr>
            
            <th class="imageCol" scope="col">image</th>
            <th class = "nameCol" scope="col">names</th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (Recipe item in Model.Recipes ?? new())
        {
        
            <tr>
                

                @{
                    try
                    {
                        <td>
                            <a asp-page="./Dish" asp-route-id="@item.RecipeId"><img src="@string.Format("data:Images/jpg;base64,{0}",Convert.ToBase64String(item.Image))" alt="@item.Name" /></a>
                        </td>
                    }
                    catch
                    {
                        <td>
                            <img src="/img/no-image-available.png" alt="No Image available" />
                        </td>
                    }
                }


                <td>
                    <div class="h2">
                    @Html.DisplayFor(modelItem => item.Name)
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
