@page
@model IndexModel
@{
    ViewData["Title"] = "Foodbank Finder";
}

<form method="get" asp-page="/GetHelp/Index">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                <div class="m-2 d-grid">
                    <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/GetHelp/Index">Get Help</a>
                </div>
                <div class="m-2 d-grid">
                    <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/GiveHelp/Index">Give Help</a>
                </div>
                <div class="m-2 d-grid">
                    <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/Recipes/Index">Recipes</a>
                </div>


            </div>
            <div class="col-sm-6 text-center">
                <h1 class="display-4">Foodbank Finder</h1>
                <div class="text-box">
                    <label for="searchFoodbank" class="form-label">
                        <h3>Search for your nearest foodbank</h3>
                    </label>
                    <input name="Location" type="text" class="form-control" id="searchFoodbank" placeholder="Enter postcode or town" aria-describedby="searchBank"/>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

