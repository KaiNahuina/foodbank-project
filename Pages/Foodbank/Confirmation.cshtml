@page
@model ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}



<div class="container">
    <div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="m-2 d-grid">
                <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/Index">Home</a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <h1> Submission Confirmed </h1>
        </div>
    </div>
</div>
    <div class="row mt-3">
        <div class="col">
            <p class="text-box h4">
                Thank you. Your submission has been sent to an admin for review. We will email you with our response
                as soon as possible. Press the home button to go back to the frontpage
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <img src="~/img/confirm.jpg" class="image-box img-fluid w-100" alt="thanks"/>
        </div>
    </div>
    <div class="row mt-md-4">
        <div class="col-7 d-grid mx-auto">
            <a class="button btn btn-lg btn-outline-success" asp-area="" asp-page="/Index">Home</a>
        </div>
    </div>
</div>